<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        tools:context=".fragments.HomeFragment"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    <LinearLayout
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                android:layout_margin="10dp">

            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="match_parent" android:padding="10dp"
                                                         android:id="@+id/homeDebtsCard">


                <TextView
                        android:text="Długi"
                        android:layout_width="89dp"
                        android:layout_height="20dp"
                        android:id="@+id/textView3" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:textSize="16sp" android:textStyle="bold"/>
                <TextView
                        android:text="23 zł"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4" android:textSize="40sp"
                        android:textStyle="bold" android:textColor="@android:color/holo_red_dark"
                        android:textAlignment="textStart" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/goDebtText"/>
                <TextView
                        android:text="Zobacz szczegóły"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/goDebtText" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:textSize="12sp"/>
                <android.support.design.widget.FloatingActionButton
                        android:src="@drawable/ic_payment"
                        android:layout_width="55dp"
                        android:layout_height="58dp"
                        android:clickable="false"
                        android:id="@+id/floatingActionButton" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="20dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.505"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.design.card.MaterialCardView>



        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            android:layout_margin="10dp">

            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="match_parent"
                                                         android:padding="10dp" android:id="@+id/homeTenantsCard">


                <TextView
                        android:text="Współlokatorzy w mieszkaniu"
                        android:layout_width="221dp"
                        android:layout_height="23dp"
                        android:id="@+id/textView3a" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:textStyle="bold" android:textSize="16sp"/>
                <TextView
                        android:text="4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4a" android:textSize="40sp"
                        android:textStyle="bold" android:textColor="@android:color/background_dark"
                        android:textAlignment="textStart" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView3a" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/textView6a"/>
                <TextView
                        android:text="Zobacz wszystkich"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6a" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:textSize="12sp"/>
                <android.support.design.widget.FloatingActionButton
                        android:src="@drawable/ic_home"
                        android:layout_width="55dp"
                        android:layout_height="58dp"
                        android:clickable="false"
                        android:id="@+id/floatingActionButton2" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="20dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.505"
                        tools:src="@drawable/ic_home" app:backgroundTint="@android:color/holo_blue_bright"/>
            </android.support.constraint.ConstraintLayout>

    </android.support.design.card.MaterialCardView>



    <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            android:layout_margin="10dp">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:padding="10dp" android:id="@+id/homeBillsCard">


            <TextView
                    android:text="Rachunki w tym miesiącu"
                    android:layout_width="221dp"
                    android:layout_height="23dp"
                    android:id="@+id/textView3b" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:textStyle="bold" android:textSize="16sp"/>
            <TextView
                    android:text="3500 zł"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4b" android:textSize="40sp"
                    android:textStyle="bold" android:textColor="@android:color/holo_red_dark"
                    android:textAlignment="textStart" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView3b" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/goBillsText"/>
            <TextView
                    android:text="Zobacz szczegóły"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/goBillsText" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:textSize="12sp"/>
            <android.support.design.widget.FloatingActionButton
                    android:src="@drawable/ic_bills"
                    android:layout_width="55dp"
                    android:layout_height="58dp"
                    android:clickable="false"
                    android:id="@+id/floatingActionButton3" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.505"
                    tools:src="@drawable/ic_bills" app:backgroundTint="@android:color/holo_orange_dark"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.design.card.MaterialCardView>



    <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            android:layout_margin="10dp">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:padding="10dp" android:id="@+id/homeShoppingCard">


            <TextView
                    android:text="Listy zakupów"
                    android:layout_width="221dp"
                    android:layout_height="23dp"
                    android:id="@+id/textView3c" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:textStyle="bold" android:textSize="16sp"/>
            <TextView
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4c" android:textSize="40sp"
                    android:textStyle="bold" android:textColor="@android:color/background_dark"
                    android:textAlignment="textStart" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView3c" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/goShoppingListText"/>
            <TextView
                    android:text="Zobacz szczegóły"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/goShoppingListText" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:textSize="12sp"/>
            <android.support.design.widget.FloatingActionButton
                    android:src="@drawable/ic_shopping_basket"
                    android:layout_width="55dp"
                    android:layout_height="58dp"
                    android:clickable="false"
                    android:id="@+id/floatingActionButton4" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.505"
                    tools:src="@drawable/ic_shopping_basket" app:backgroundTint="@color/theme_blue"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                android:layout_margin="10dp">

            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="match_parent"
                                                         android:padding="10dp" android:id="@+id/homeCleaningCard">


                <TextView
                        android:text="Dzisiaj dyżuruje"
                        android:layout_width="221dp"
                        android:layout_height="23dp"
                        android:id="@+id/textView3d" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:textStyle="bold" android:textSize="16sp"/>
                <TextView
                        android:text="Janusz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4d" android:textSize="40sp"
                        android:textStyle="bold" android:textColor="@android:color/background_dark"
                        android:textAlignment="textStart" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView3d" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/goCleaningText"/>
                <TextView
                        android:text="Zobacz więcej"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/goCleaningText" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:textSize="12sp"/>
                <android.support.design.widget.FloatingActionButton
                        android:src="@drawable/ic_claning"
                        android:layout_width="55dp"
                        android:layout_height="58dp"
                        android:clickable="false"
                        android:id="@+id/floatingActionButton5" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="20dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.505"
                        tools:src="@drawable/ic_shopping_basket" app:backgroundTint="@color/theme_green"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.design.card.MaterialCardView>


    </LinearLayout>

</ScrollView>